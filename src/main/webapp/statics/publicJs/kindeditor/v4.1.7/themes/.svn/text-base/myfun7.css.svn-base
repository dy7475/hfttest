*{font-size:12px;}
.ke-content {
	margin: 0px;
    font-family: Arial, Helvetica, sans-serif,"宋体";
    font-size: 12px;
    background-color: white;
    word-break:break-all;
}

.ke-content p{
	margin:2px 0;
}

.replyQuote{word-break:break-all; border: 1px dashed #ff3333;background:#fff;padding:5px;width:580px;margin:0 auto;}
.replyQuoteDiv{word-break:break-all; border: 1px solid #FFCC00;background:#FFFFF7;padding:5px;width:580px;margin-left: -6px;margin-top: 4px;height: auto;}


.tableCss{border:1px solid #BAD7FF;font-size:12px;margin:0 auto;width:585px;text-align: left}
.tableCss th{font-family:'宋体'; background: #e8f5fe;color: #444444;height: 32px;font-size: 12px;padding-left: 3px;border-bottom: 1px solid #BAD7FF;}
.tableCss td{padding-left:5px;text-align:left;}
.tableCss .trOdd{background:#F2F8FF;height:22px;padding-left:3px}
.tableCss .trEven{background:#F2F8FF;height:32px;padding-left:3px}

hr {
	border-top: #bad7ff 1px solid;
	margin-bottom: 5px;
	border-bottom: #ffffff 1px solid;
	height: 2px
}
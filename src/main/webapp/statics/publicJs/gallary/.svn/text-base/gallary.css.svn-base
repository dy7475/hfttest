ul,li{list-style: none;margin:0;padding:0}
#photo_layer {width: 100%;height: 100%;top: 0;left: 0;overflow: hidden;position: absolute;}
#photo_bg_layer {width: 100%;height: 100%;top: 0;left: 0;filter:alpha(opacity=1);opacity: 0.01;position: absolute;background:#000000;}
#photo_figure{margin:0 auto;width:670px;height:500px;background: transparent/*#161616*/;position:absolute;}
#img_ul_box{position:relative;width:640px;height:640px;
	border:1px solid #333;padding:0;
	-moz-box-shadow:0px 0px 40px #161616;
	-webkit-box-shadow:0px 0px 40px #161616;
	box-shadow:0px 0px 40px #161616;
	-moz-border-radius:4px;
	-webkit-border-radius:4px;
	border-radius:4px;
}
#index_box{width:100px;z-index:1002;position: absolute;top:10px;right:20px;text-align: right;}
#index_box #index_num{font-family: Arial,Tahoma,'宋体';font-size:36px;color:#fff;text-shadow:1px 1px 1px #666;}
#index_box #separator{font-size:14px;color:#ccc;text-shadow:1px 1px 1px #666;}
#index_box #total_num{font-size:14px;color:#ccc;text-shadow:1px 1px 1px #666;margin-right:10px;}
#_upload_btn{position: absolute;bottom:10px;right:10px;text-decoration: none;width:100px;height:24px;z-index:1001;outline: none;background: url(_upload.png) no-repeat;filter:alpha(opacity=50);opacity: 0.5;}
#_upload_btn:HOVER{filter:alpha(opacity=100);opacity: 1;}
.img_container{width:640px;height:640px;position: absolute;overflow: hidden;background:rgba(0,0,0,0.95);
	border:1px solid #CCC;
	-moz-border-radius:4px;
	-webkit-border-radius:4px;
	border-radius:4px;}
#img_ul {position: absolute;top: 0;left: 0;}
#img_ul li{width:640px;height:640px;line-height:640px;text-align: center;position:absolute;overflow: hidden;top: 0;left: 0;}
#img_ul img{margin-left:0;margin-top:0;vertical-align: middle;width: 640px;}
#ctrl_bar{position: absolute;top:10px;right:-18px;filter:alpha(opacity=100);opacity: 0.9;width:36px;*background:#ECECEE;z-index:1000}
#ctrl_bar a{display:block;width:36px;height:34px;outline: none;}
#ctrl_bar .play{background:url(icon_bg.png) -1px 0 no-repeat;}
#ctrl_bar .play:HOVER{background-position: -1px -34px;}
#ctrl_bar .play:ACTIVE{background-position: -1px -69px;}
#ctrl_bar .pause{background:url(icon_bg.png) -40px 0 no-repeat;}
#ctrl_bar .pause:HOVER{background-position:-40px -34px;}
#ctrl_bar .pause:ACTIVE{background-position:-40px -69px;}
#ctrl_bar #prev{background:url(icon_bg.png) -79px 0 no-repeat;}
#ctrl_bar #prev:HOVER{background-position:-79px -34px;}
#ctrl_bar #prev:ACTIVE{background-position:-79px -69px;}
#ctrl_bar #next{background:url(icon_bg.png) -118px 0 no-repeat;}
#ctrl_bar #next:HOVER{background-position:-118px -34px;}
#ctrl_bar #next:ACTIVE{background-position:-118px -69px;}
#close_btn{background:url(icon_bg.png) -157px 0 no-repeat;}
#close_btn:HOVER{background-position:-157px -34px;}
#close_btn:ACTIVE{background-position:-157px -69px;}
.pxs_navigation span{display:none;position:absolute;width:30px;height:60px;top:220px;filter:alpha(opacity=20);opacity:0.2;cursor:pointer;
	-moz-box-shadow:0px 0px 2px #000;
	-webkit-box-shadow:0px 0px 2px #000;
	box-shadow:0px 0px 2px #000;
	-moz-border-radius:4px;
	-webkit-border-radius:4px;
	border-radius:4px;
}
.pxs_navigation span:hover{filter:alpha(opacity=80);opacity:0.8;}
.pxs_navigation span#pxs_prev{background:#000 url(./prev.png) no-repeat center center;left:0}
.pxs_navigation span#pxs_next{background:#000 url(./next.png) no-repeat center center;right:0}
 body,
 html {
     width: 100%;
     height: 100%;
     position: relative;
 }

 #app {
     position: relative;
     margin: 0 auto;
     width: 3.75rem;
     height: 100%;
 }

 .hide {
     display: none;
 }

 /** banner
 ********************************************************/
 .banner{
     width: 100%;
     height: 6.67rem;
     background: url(../images/ylt/succ_banner.png) center center no-repeat;
     background-size: 100% 100%;
     padding-top: 1.55rem;
     box-sizing: border-box;
     text-align: center;
     position: relative;
 }
 .banner .logo {
   width: 1.535rem;
   height: 0.42rem;
   margin: 0 auto 0.2rem;
   background: url(../images/ylt/download_logo.png) center center no-repeat;
   background-size: 100% 100%;
 }
 .banner .text{
     font-size: 0.28rem;
     font-weight: bold;
     color: #fff;
     margin-bottom: 0.06rem;
     width: 100%;
     overflow: hidden;
     text-overflow: ellipsis;
     padding: 0 0.1rem;
     box-sizing: border-box;
 }
 .banner .text span{
     display: inline-block;
     white-space: nowrap;
     overflow: hidden;
     text-overflow: ellipsis;
 }
 .banner .tips{
     font-size: 0.13rem;
     color: #fff;
 }
.download{
     display: block;
     position: fixed;
     bottom: 0.46rem;
     left: 50%;
     margin-left: -1.325rem;
     width: 2.65rem;
     height: 0.47rem;
     line-height: 0.47rem;
     font-size: 0.17rem;
     background-image: linear-gradient(90deg,
       rgba(40, 103, 232, 0.9) 0%,
       rgba(40, 103, 232, 0.95) 0%,
       #2867e8 0%,
       #4d88fc 100%),
     linear-gradient(#068efe,
       #068efe);
     background-blend-mode: normal,
     normal;
     box-shadow: 0rem 0.04rem 0.07rem 0rem rgba(42, 105, 233, 0.29);
     border-radius: 0.24rem;
     color: #fff;
     text-align: center;
     font-weight: bold;
 }

 